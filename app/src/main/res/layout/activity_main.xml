<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.manik.calculator.MainActivity"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"

        >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:background="@color/white"

        android:layout_margin="6dp">

        <TextView
            android:text="Result"
            android:layout_width="match_parent"
            android:id="@+id/calTextView"
            android:layout_height="200dp"
            android:layout_margin="2dp"
            android:textSize="25sp" />
    </FrameLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="216dp"
          android:rowCount="4"
        android:columnCount="4"

        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="#ffffff">


        <Button
            android:text="1"
            android:id="@+id/button1"
            style="@style/num_button"
            android:elevation="6dp"
            android:onClick="button_1" />



        <Button
            android:text="2"
            android:id="@+id/button2"
            style="@style/num_button"
            android:onClick="button_2" />
        <Button
            android:text="3"
            android:id="@+id/button3"
            style="@style/num_button"
            android:onClick="button_3" />
        <Button
            android:text="x"
            android:id="@+id/buttonx"
            style="@style/calButtons"
            />
        <Button
            android:text="4"
            android:id="@+id/button4"
            style="@style/num_button"
            android:onClick="button_4" />
        <Button
            android:text="5"
            android:id="@+id/button5"
            style="@style/num_button"
            android:onClick="button_5" />
        <Button
            android:text="6"
            android:id="@+id/button6"
            style="@style/num_button"
            android:onClick="button_6" />
        <Button
            android:text="y"
            android:id="@+id/buttony"
            style="@style/calButtons"
            />
        <Button
            android:text="7"
            android:id="@+id/button7"
            style="@style/num_button"
            android:onClick="button_7" />
        <Button
            android:text="8"
            android:id="@+id/button8"
            style="@style/num_button"
            android:onClick="button_8" />
        <Button
            android:text="9"
            android:id="@+id/button9"
            style="@style/num_button"
            android:onClick="button_9" />
        <Button
            android:text="z"
            android:id="@+id/buttonz"
            style="@style/calButtons"
            />
        <Button
            android:text="."
            android:id="@+id/button_dot"
            style="@style/calButtons"
            />
        <Button
            android:text="0"
            android:id="@+id/button0"
            style="@style/num_button"
            android:onClick="button_0" />
        <Button
            android:text="="
            android:id="@+id/button_equal"
            style="@style/calButtons"
            />
        <Button
            android:text="w"
            android:id="@+id/buttonw"
            style="@style/calButtons"
            />




    </GridLayout>
    </FrameLayout>
</RelativeLayout>
